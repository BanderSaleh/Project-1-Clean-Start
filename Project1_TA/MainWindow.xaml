<Window x:Class="Project1_TA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1_TA"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Canvas Background="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}">
            <Button x:Name="btnEmployees" Content="show Employees database" HorizontalAlignment="Left" Margin="80,64,0,0" VerticalAlignment="Top" FontSize="18" Height="45" Width="240" FontFamily="Arial" Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" Click="btnEmployees_Click"/>
            <DataGrid x:Name="GridView1" Height="240" Width="760"  Canvas.Left="20" Canvas.Top="139" SelectionChanged="GridView1_SelectionChanged" MinColumnWidth="10"/>
        </Canvas>


    </Grid>
</Window>
